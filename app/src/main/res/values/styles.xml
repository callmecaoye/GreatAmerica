<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>-->
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#1A000000</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

   <!-- Login Material EditText样式 -->
    <style name="MyTextLabel">
        <!--Hint color and label color in FALSE state-->
        <item name="android:textColorHint">@color/em_black_38</item>
        <!--Label color in TRUE state and bar color FALSE and TRUE State-->
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <!-- Login Button -->
    <style name="MyButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_btn</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/btn_gradient_solid</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Login Tab -->
    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">10dp</item>
        <item name="tabPaddingEnd">10dp</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="tabSelectedTextColor">#C44A4A4A</item>
    </style>
    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/em_black_38</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- view分割线样式 -->
    <style name="bg_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#99BBBBBB</item>
    </style>
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#99BBBBBB</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- Chat -->
    <style name="chat_text_name_style">
        <item name="android:textColor">#8798a4</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="chat_text_date_style" parent="chat_text_name_style"/>
    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

   <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style name="Base_AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMinor">90%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
