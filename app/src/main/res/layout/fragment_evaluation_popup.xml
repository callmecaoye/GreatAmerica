<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:orientation="vertical"
    android:fillViewport="true"
    android:id="@+id/evaluation_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black">
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_layout">
        <LinearLayout android:id="@+id/dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_fragment"
            android:layout_gravity="bottom">
            <TextView
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Evaluation"
                android:textSize="16sp" />
            <View style="@style/bg_line"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <com.willy.ratingbar.ScaleRatingBar
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srb_clearRatingEnabled="false"
                app:srb_drawableEmpty="@drawable/ic_star_off"
                app:srb_drawableFilled="@drawable/ic_star_on"
                app:srb_numStars="5"
                app:srb_rating="0"
                app:srb_starHeight="40dp"
                app:srb_starPadding="0dp"
                app:srb_starWidth="40dp"
                app:srb_stepSize="1"
                app:srb_clickable="true"/>
            <TextView android:id="@+id/rating_txt"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Not Set"
                android:textColor="@color/pm_gray" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">
                <TextView android:id="@+id/fragment_evaluation_popup_tag1"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/tag_border_gray"
                    android:gravity="center"
                    android:text="On Time"
                    android:textColor="@color/pm_gray"
                    android:textSize="12sp" />
                <TextView android:id="@+id/fragment_evaluation_popup_tag2"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/tag_border_gray"
                    android:gravity="center"
                    android:text="Strong Expertise"
                    android:textColor="@color/pm_gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView android:id="@+id/fragment_evaluation_popup_tag3"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/tag_border_gray"
                    android:gravity="center"
                    android:text="Effective Advice"
                    android:textColor="@color/pm_gray"
                    android:textSize="12sp" />
                <TextView android:id="@+id/fragment_evaluation_popup_tag4"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/tag_border_gray"
                    android:gravity="center"
                    android:text="Good Preparation"
                    android:textColor="@color/pm_gray"
                    android:textSize="12sp" />
            </LinearLayout>
            <EditText android:id="@+id/fragment_evaluation_popup_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_solid_gray"
                android:gravity="top|left"
                android:hint="How was the meeting? Let others know your thought."
                android:inputType="textMultiLine"
                android:textSize="14sp"
                android:lines="10"
                android:maxLines="10"
                android:padding="10dp"
                android:scrollbars="vertical" />
            <TextView android:id="@+id/fragment_evaluation_popup_submit"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_solid_gray"
                android:enabled="false"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/pm_gray"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>
</ScrollView>