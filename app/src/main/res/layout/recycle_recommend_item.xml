<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="13dp"
    tools:ignore="MissingPrefix">

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_recommend_service_image"
            android:layout_height="50dp"
            android:layout_width="50dp"/>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">
            <TextView android:id="@+id/list_recommend_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/pm_dark"
                fontPath="fonts/OpenSans-SemiBold.ttf"/>
            <TextView android:id="@+id/list_recommend_service_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/pm_gray"/>
        </LinearLayout>
    </LinearLayout>

    <com.promeets.android.custom.CustomFlexBox
        android:id="@+id/flexBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="11dp"
        app:flexWrap="wrap"
        app:alignItems="flex_start"
        app:alignContent="flex_start"/>
    <View android:id="@+id/divider"
        style="@style/bg_line"/>
</LinearLayout>