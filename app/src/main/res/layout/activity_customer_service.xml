<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:overScrollMode="never">
    <LinearLayout android:id="@+id/root_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp">
        <ImageView android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:src="@drawable/app_logo"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <TextView android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="26dp"
            android:text="Please fill out the information so that\nwe can contact you in time"
            android:textColor="@color/pm_gray"
            fontPath="fonts/OpenSans-SemiBold.ttf"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:orientation="vertical">
            <TextView android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Name"
                android:textColor="@color/pm_dark"
                android:textSize="18sp"
                fontPath="fonts/OpenSans-SemiBold.ttf"/>
            <EditText android:id="@+id/activity_customer_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Joan Doe"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:theme="@style/MyEditText"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:text="Phone"
                android:textColor="@color/pm_dark"
                android:textSize="18sp"
                fontPath="fonts/OpenSans-SemiBold.ttf"/>
            <EditText android:id="@+id/activity_customer_service_cellphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="4150000000"
                android:inputType="phone"
                android:singleLine="true"
                android:theme="@style/MyEditText"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:text="Email"
                android:textColor="@color/pm_dark"
                android:textSize="18sp"
                fontPath="fonts/OpenSans-SemiBold.ttf"/>
            <EditText android:id="@+id/activity_customer_service_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="example@promeets.us"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:theme="@style/MyEditText"/>

            <EditText android:id="@+id/activity_customer_service_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_border_gray"
                android:hint="What's your name? What are you working on? Just graduated? Starting a new venture? Interesting facts? We want to get to know you."
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="12"
                android:maxLines="12"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/pm_dark"
                android:textSize="14sp"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp">
                <TextView android:id="@+id/activity_customer_service_cancel"
                    android:layout_height="40dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/btn_solid_grey"
                    android:textColor="@color/white"
                    android:text="Cancel"
                    fontPath="fonts/OpenSans-SemiBold.ttf"/>
                <TextView android:id="@+id/activity_customer_service_submit"
                    android:layout_height="40dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:background="@drawable/btn_solid_primary"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="Submit"
                    fontPath="fonts/OpenSans-SemiBold.ttf"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>