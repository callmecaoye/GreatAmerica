<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingPrefix" >
    <VideoView android:id="@+id/video_view"
        android:scrollbars="none"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <TextView android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="Skip"
        android:textColor="@color/em_black_38" />


    <LinearLayout android:id="@+id/root_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout android:id="@+id/middle_lay"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:gravity="bottom">
            <ImageView android:id="@+id/img_logo"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="38dp"
                android:paddingRight="38dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="right"
                android:src="@drawable/app_logo_white"/>
            <TextView android:id="@+id/slogan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/bottom_lay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:paddingLeft="38dp"
            android:paddingRight="38dp"
            android:paddingTop="10dp"
            android:paddingBottom="60dp"
            android:gravity="bottom">
        <LinearLayout android:id="@+id/fb_login_button"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@drawable/btn_fb"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:scaleType="center"
                android:src="@drawable/logo_fb" />
            <TextView android:id="@+id/txt_fb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sign in with Facebook"
                android:textColor="@color/white"
                fontPath="fonts/OpenSans-SemiBold.ttf"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/li_login_button"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/btn_li"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:scaleType="center"
                android:src="@drawable/logo_li" />
            <TextView android:id="@+id/txt_li"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sign in with LinkedIn"
                android:textColor="@color/white"
                fontPath="fonts/OpenSans-SemiBold.ttf"/>
        </LinearLayout>

        <TextView android:id="@+id/sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@drawable/btn_solid_primary_round"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:text="Sign up"
            android:textColor="@color/white"
            fontPath="fonts/OpenSans-SemiBold.ttf"/>

        <LinearLayout android:id="@+id/log_in_button"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textSize="13sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:textColor="@color/white"
                android:textSize="13sp"
                fontPath="fonts/OpenSans-Bold.ttf"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>