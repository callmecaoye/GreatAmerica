<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View android:id="@+id/filter_trans_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_frag_title"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:text="Filter"
        android:textSize="15sp"
        android:textColor="@color/pm_dark"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="27dp"
        android:paddingRight="27dp"
        android:clipChildren="false">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Ranking"
            android:textSize="18sp"
            android:textColor="@color/pm_dark"
            fontPath="fonts/OpenSans-SemiBold.ttf"/>
        <TextView android:id="@+id/sort_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Comprehensive Ranking"
            android:textSize="15sp"
            android:textColor="@color/pm_gray"/>
        <View style="@style/bg_line"/>
        <TextView android:id="@+id/sort_meet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Meet The Most"
            android:textSize="15sp"
            android:textColor="@color/pm_gray"/>
        <View style="@style/bg_line"/>
        <TextView android:id="@+id/sort_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:text="Highest Score"
            android:textSize="15sp"
            android:textColor="@color/pm_gray"/>
        <View style="@style/bg_line"/>
        <TextView android:id="@+id/sort_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:text="The Lowest Price"
            android:textSize="15sp"
            android:textColor="@color/pm_gray"/>
        <View style="@style/bg_line"
            android:layout_marginBottom="20dp"/>



        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="18sp"
            android:textColor="@color/pm_dark"
            fontPath="fonts/OpenSans-SemiBold.ttf"/>
        <TextView android:id="@+id/price_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="$0 - $500"
            android:textColor="@color/primary"
            android:textSize="15sp"
            fontPath="fonts/OpenSans-SemiBold.ttf"/>

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:id="@+id/rangeSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:corner_radius="10"
            app:min_value="0"
            app:max_value="1200"
            app:steps="1"
            app:bar_color="@color/bg_color"
            app:bar_highlight_color="@color/primary"
            app:left_thumb_image="@drawable/ic_cursor_sm"
            app:right_thumb_image="@drawable/ic_cursor_sm"
            app:left_thumb_image_pressed="@drawable/ic_cursor"
            app:right_thumb_image_pressed="@drawable/ic_cursor"
            app:data_type="_integer"/>

        <TextView android:id="@+id/apply_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_solid_primary"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="Apply Filter"
            android:textColor="@color/white"
            android:textSize="18sp"
            fontPath="fonts/OpenSans-Bold.ttf"/>
    </LinearLayout>
</LinearLayout>