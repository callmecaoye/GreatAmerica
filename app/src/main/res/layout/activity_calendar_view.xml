<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="24dp">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true">
        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Make An Appointment"
            android:textSize="18sp"
            android:textColor="@color/pm_dark"/>
        <TextView android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Save"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:padding="10dp"/>
        <View style="@style/bg_line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        app:hourHeight="60dp"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="@color/pm_dark"
        app:headerRowPadding="12dp"
        app:columnGap="1dp"
        app:noOfVisibleDays="4"
        app:headerRowBackgroundColor="@color/white"
        app:dayBackgroundColor="@color/white"
        app:todayBackgroundColor="@color/white"
        app:headerColumnBackground="@color/white"
        app:todayHeaderTextColor="@color/primary"
        app:eventPadding="10dp"/>
</LinearLayout>